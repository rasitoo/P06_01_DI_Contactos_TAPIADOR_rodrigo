<UserControl xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"  x:Class="P06_01_DI_Contactos_TAPIADOR_rodrigo.UI.Views.ProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:P06_01_DI_Contactos_TAPIADOR_rodrigo.UI.Views"
             mc:Ignorable="d" 
             xmlns:c="clr-namespace:P06_01_DI_Contactos_TAPIADOR_rodrigo.UI.Controls"
             xmlns:vm="clr-namespace:P06_01_DI_Contactos_TAPIADOR_rodrigo.UI.ViewModels"
             xmlns:p="clr-namespace:P06_01_DI_Contactos_TAPIADOR_rodrigo.Properties"
             d:DataContext="{d:DesignInstance vm:ProductViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/P06_01_DI_Contactos_TAPIADOR_rodrigo;component/UI/Themes/Generics.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Height="50" 
        Background="MediumPurple"
        Margin="0,0,0,10"
        Grid.ColumnSpan="2">
            <TextBlock Text="{x:Static p:Resources.Product}" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" />
        </Border>
        <c:ListViewProducts ItemsSource="{Binding Products}" SelectedItem="{Binding SelectedItem}" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top"/>
        <ScrollViewer Grid.Column="1" Grid.Row="1">
            <StackPanel Grid.Row="1" Grid.Column="1">
                <Image Source="{Binding SelectedItem.ImageUri}" Height="200" Margin="0,0,10,0" />
                <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock HorizontalAlignment="Left"  Text="{x:Static p:Resources.Product}" Margin="10"/>
                        <TextBox  Text="{Binding SelectedItem.Name, Mode=TwoWay}"  FontWeight="Bold" Grid.Column="1" Margin="10"/>

                        <TextBlock HorizontalAlignment="Left" Text="{x:Static p:Resources.Description}" Grid.Row="1" Margin="10"/>
                        <TextBox Text="{Binding SelectedItem.Description, Mode=TwoWay}" Grid.Column="1" Grid.Row="1" Margin="10"/>

                        <TextBlock HorizontalAlignment="Left" Text="{x:Static p:Resources.Price}" Grid.Row="2" Margin="10"/>
                        <TextBox Text="{Binding SelectedItem.Price, Mode=TwoWay}" Grid.Column="1" Grid.Row="2" Margin="10"/>

                        <TextBlock HorizontalAlignment="Left" Text="{x:Static p:Resources.Category}" Grid.Row="3" Margin="10"/>
                        <TextBox Text="{Binding SelectedItem.Category.Name, Mode=TwoWay}" Grid.Column="1" Grid.Row="3" Margin="10"/>
                    </Grid>
                </Border>

                <Button Content="{x:Static p:Resources.Save}" Command="{Binding SaveCommand}" Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Center" Width="150" Margin="0,25,0,0"/>
                <Button Content="{x:Static p:Resources.Delete}" Command="{Binding DeleteCommand}" Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Center" Width="150" Margin="5"/>

            </StackPanel>
        </ScrollViewer>
        
    </Grid>
</UserControl>