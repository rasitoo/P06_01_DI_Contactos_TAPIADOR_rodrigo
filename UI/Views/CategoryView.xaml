<UserControl x:Class="P06_01_DI_Contactos_TAPIADOR_rodrigo.UI.Views.CategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:P06_01_DI_Contactos_TAPIADOR_rodrigo.UI.Views"
             mc:Ignorable="d" 
             xmlns:c="clr-namespace:P06_01_DI_Contactos_TAPIADOR_rodrigo.UI.Controls"
             xmlns:vm="clr-namespace:P06_01_DI_Contactos_TAPIADOR_rodrigo.UI.ViewModels"
             xmlns:p="clr-namespace:P06_01_DI_Contactos_TAPIADOR_rodrigo.Properties"
             d:DataContext="{d:DesignInstance vm:CategoryViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/P06_01_DI_Contactos_TAPIADOR_rodrigo;component/UI/Themes/Generics.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Height="50" 
        Background="MediumPurple"
        Margin="0,0,0,10"
        Grid.ColumnSpan="2">
            <TextBlock Text="{x:Static p:Resources.Category}" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>
        <c:ListViewCategories ItemsSource="{Binding Categories}" Grid.Row="1" VerticalAlignment="Top"/>
    </Grid>
</UserControl>